@using SachOnline.Models
@using PagedList.Mvc;
@model PagedList.PagedList<SachOnline.Models.DONDATHANG>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="text-align: center;">QUẢN LÝ THÔNG TIN ĐẶT HÀNG</h2>

<p>
    @Html.ActionLink("Tạo mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Trạng thái thanh toán
        </th>
        <th>
            Tình trạng giao hàng
        </th>
        <th>
            Ngày đặt
        </th>
        <th>
            Ngày giao
        </th>
        <th>
            Họ tên khách hàng
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.HTThanhToan)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.HTGiaoHang)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.NgayDH)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.NgayGiaoHang)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.KHACHHANG.HoTenKH)
    </td>
    <td>
        <a href="@Url.Action("Edit", new { id = item.SoDH })" class="btn btn-warning" role="button">Sửa</a>
        <a href="@Url.Action("Details", new { id = item.SoDH })" class="btn btn-primary" role="button">Chi tiết</a>
        <a href="@Url.Action("Delete", new { id = item.SoDH })" class="btn btn-danger" role="button">Xóa</a>
    </td>
</tr>
    }

</table>
Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
<div class="MenuTrang">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
</div>