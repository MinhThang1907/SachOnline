@model SachOnline.Models.DONDATHANG

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<div>
    <h2>Chi tiết đơn hàng</h2>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Trạng thái thanh toán
        </dt>

        <dd>
            @Html.DisplayFor(model => model.HTThanhToan)
        </dd>

        <dt>
            Trạng thái giao hàng
        </dt>

        <dd>
            @Html.DisplayFor(model => model.HTGiaoHang)
        </dd>

        <dt>
            Ngày đặt
        </dt>

        <dd>
            @Html.FormatValue(Model.NgayDH, "{0:dd/MM/yyyy}")
        </dd>

        <dt>
            Ngày giao
        </dt>

        <dd>
            @Html.FormatValue(Model.NgayGiaoHang, "{0:dd/MM/yyyy}")
        </dd>

        <dt>
            Họ tên khách hàng
        </dt>

        <dd>
            @Html.DisplayFor(model => model.KHACHHANG.HoTenKH)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Sửa", "Edit", new { id = Model.SoDH }) |
    @Html.ActionLink("VỀ TRANG QUẢN LÝ ĐƠN HÀNG", "Index")
</p>
